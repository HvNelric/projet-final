{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container py-5">
        <h1 class="text-center mb-5">Modif date</h1>
        <div class="row">
            <div class="form-btn-group text-left">
                <a href="{{ path('app_profil_index') }}" class="btn btn-info" type="submit">Retour</a>
            </div>
            <div class="col-6">
                <p>
                    Date de dispo :
                    {{ user.dateDispo|date('d/m/Y H:m') }} Ã  {{ user.dateFin|date('d/m/Y H:m') }}
                </p>
            </div>
            <div class="col-6">
                {{ form_start(form) }}
                    {{ form_row(form.date_dispo) }}
                    {{ form_row(form.date_fin) }}
                <div class="form-btn-group">
                    <button class="btn btn-info" type="submit">Enregistrer</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

    </div>
{% endblock %}